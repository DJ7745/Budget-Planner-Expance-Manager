<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Add Income"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/blue"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Budget\nName"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/add_income_budget_name"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Name"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            android:layout_weight="6"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha=".4"
        android:background="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Date :"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/add_income_dialog"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Select Date"
            android:layout_weight="6"
            android:textSize="16sp"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Source :"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/add_income_source_dialog"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Source Of Income"
            android:layout_weight="6"
            android:textSize="16sp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Amount :"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/add_income_amount_dialog"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Enter Amount"
            android:layout_weight="6"
            android:textSize="16sp"
            android:inputType="number"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel_income_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btn_save_income_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:layout_weight="2"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>